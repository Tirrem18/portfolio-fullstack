@page
@model Portfolio.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Section 1: I'm Jacob -->
<section class="section-jacob">
    <div class="container-jacob">
        <div class="jacob-grid">
            <!-- Text content (4/12) -->
            <div class="jacob-text">
                <h1>Hey, I'm Jacob</h1>
                <p>[yabba yabba]</p>
            </div>

            <!-- Image (8/12) -->
            <div class="jacob-image">
                <img src="/images/placeholder.jpg" alt="Jacob Profile">
            </div>
        </div>
    </div>
</section>

<hr class="border-t border-gray-300" />

<!-- Section 2: What I've Been Up To -->
<section class="bg-white py-16 text-center">
    <div class="container mx-auto">
        <h2 class="text-2xl font-semibold mb-4">What I've Been Up To</h2>
        <p class="max-w-xl mx-auto text-gray-700 mb-6">
            [Short paragraph about dev logs]
        </p>

        @if (Model.Logs.Any())
        {
            var latestLog = Model.Logs.First();
            <div class="bg-gray-50 p-4 rounded shadow-md max-w-xl mx-auto">
                <strong>@latestLog.Date.ToString("yyyy-MM-dd")</strong> –
                @latestLog.Summary
                <br />
                <small class="text-gray-600">@latestLog.Description</small>
            </div>
        }
        else
        {
            <p class="text-gray-500">No dev logs available yet.</p>
        }

        <div class="mt-4">
            <a href="/DevLogs" class="text-blue-600 underline font-medium">View All DevLogs →</a>
        </div>
    </div>
</section>

<hr class="border-t border-gray-300" />

<!-- Section 3: Core Projects -->
<section class="bg-gray-100 py-16 text-center">
    <div class="container mx-auto">
        <h2 class="text-2xl font-semibold mb-8">My Core Projects</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
            <div class="bg-white p-4 rounded shadow-md">
                <h3 class="text-xl font-bold">[Project Title]</h3>
                <p class="text-gray-700 mt-2">[Short description]</p>
                <div class="mt-4">
                    <a href="#" class="text-blue-600 underline">View Project</a>
                </div>
            </div>

            <div class="bg-white p-4 rounded shadow-md">
                <h3 class="text-xl font-bold">[Project Title]</h3>
                <p class="text-gray-700 mt-2">[Short description]</p>
                <div class="mt-4">
                    <a href="#" class="text-blue-600 underline">View Project</a>
                </div>
            </div>
        </div>
    </div>
</section>
