<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #eaf5ff;">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between w-100">
                    <ul class="navbar-nav gap-3">
                        <li class="nav-item">
                            <a class="nav-link text-black @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "fw-normal")"
                               asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black @(ViewContext.RouteData.Values["page"]?.ToString() == "/Projects/Index" ? "active" : "fw-normal")"
                               asp-page="/Projects/Index">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black @(ViewContext.RouteData.Values["page"]?.ToString() == "/DevLogs/Index" ? "active" : "fw-normal")"
                               asp-page="/DevLogs/Index">Dev logs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black @(ViewContext.RouteData.Values["page"]?.ToString() == "/Journey/Index" ? "active" : "fw-normal")"
                               asp-page="/Journey/Index">Journey</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-black @(ViewContext.RouteData.Values["page"]?.ToString() == "/Contact/Index" ? "active" : "fw-normal")"
                               asp-page="/Contact/Index">Contact Me</a>



                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Portfolio.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
